<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.ui.splashscreen.IntroduceFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="@dimen/space_medium"
            android:layout_height="@dimen/space_medium"
            app:cardBackgroundColor="@color/silver"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="0dp">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="@dimen/space_medium"
            android:layout_height="@dimen/space_medium"
            android:layout_margin="@dimen/space_medium"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="0dp">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="@dimen/space_medium"
            android:layout_height="@dimen/space_medium"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="0dp">

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <com.example.shopdeviz.presentation.ui.view.ButtonLarge
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_huge"
        android:visibility="visible"
        app:tvButton="@string/next" />

    <com.example.shopdeviz.presentation.ui.view.ButtonLarge
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_huge"
        android:visibility="gone"
        app:tvButton="@string/get_started" />

</LinearLayout>