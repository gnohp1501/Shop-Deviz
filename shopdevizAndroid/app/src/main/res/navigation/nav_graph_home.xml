<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.shopdeviz.presentation.ui.splashscreen.SplashCustomScreen"
        android:label="splash_screen"
        tools:layout="@layout/splash_custom_screen" >
        <action
            android:id="@+id/action_splashScreen_to_mainScreen"
            app:destination="@id/mainScreen" />
        <action
            android:id="@+id/action_splashScreen_to_authenScreen"
            app:destination="@id/authenScreen" />
    </fragment>
    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.shopdeviz.presentation.ui.mainscreen.MainScreen"
        android:label="MainScreen" />
    <fragment
        android:id="@+id/authenScreen"
        android:name="com.example.shopdeviz.presentation.ui.authenscreen.AuthenScreen"
        android:label="authen_screen"
        tools:layout="@layout/authen_screen" >
        <action
            android:id="@+id/action_authenScreen_to_mainScreen"
            app:destination="@id/mainScreen" />
    </fragment>
</navigation>